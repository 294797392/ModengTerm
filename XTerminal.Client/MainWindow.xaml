<Window x:Class="XTerminalClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XTerminalClient"
        xmlns:gterm="clr-namespace:GTerminalControl;assembly=GTerminalControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid Visibility="Collapsed">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Menu Background="Transparent">
                <MenuItem Header="文件">
                    <MenuItem Header="新建"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <ContentControl Grid.Row="1">
            <TabControl>
                <TabItem Header="connection">
                    <!--<gterm:VTConsole x:Name="VTConsole"/>-->
                </TabItem>
                <TabItem Header="connection2">
                    <!--<gterm:VTConsole x:Name="VTConsole2"/>-->
                </TabItem>
            </TabControl>
        </ContentControl>

    </Grid>
    
</Window>