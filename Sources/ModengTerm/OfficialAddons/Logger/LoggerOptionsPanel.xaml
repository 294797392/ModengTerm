<mac:TabedSidePanel x:Class="ModengTerm.OfficialAddons.Logger.LoggerOptionsPanel"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:mac="clr-namespace:ModengTerm.Addon.Controls;assembly=ModengTerm.Addon"
                    xmlns:local="clr-namespace:ModengTerm.OfficialAddons.Logger"
                    mc:Ignorable="d"
                    d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <local:LoggerStatus2TextConverter x:Key="LoggerStatus2TextConverter"/>
        <local:LoggerStatus2BrushConverter x:Key="LoggerStatus2BrushConverter"/>

        <Style x:Key="StyleTextBlockKey" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="StyleTextBoxValue" TargetType="{x:Type TextBox}" BasedOn="{StaticResource ResourceKey=StyleTextBox}">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StyleCheckBoxValue" TargetType="{x:Type CheckBox}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="3,0,0,0"/>
        </Style>

        <Style x:Key="StyleComboBoxValue" TargetType="{x:Type ComboBox}">
            <Setter Property="Margin" Value="3"/>
        </Style>

        <Style x:Key="StyleButtonLocal" TargetType="{x:Type Button}" BasedOn="{StaticResource ResourceKey=StyleButton}">
            <Setter Property="Margin" Value="0,0,3,0"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="30"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="3" Width="350">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="关键字：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Path=Keyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=StyleTextBoxValue}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="区分大小写：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
        <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding Path=IgnoreCase, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=StyleCheckBoxValue}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="正则表达式：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
        <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding Path=Regexp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=StyleCheckBoxValue}"/>

        <GroupBox Grid.Row="3" Header="保存路径">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="TextBoxLogPath" Text="{Binding Path=FilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=StyleTextBoxValue}"/>

                <Button Grid.Column="1" Content="浏览" Height="25" Width="60" Click="ButtonBrowse_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>

            </Grid>

        </GroupBox>

        <TextBlock Grid.Row="4" x:Name="TextBlockStatus" Text="{Binding Path=Status, Converter={StaticResource ResourceKey=LoggerStatus2TextConverter}}" 
                   Foreground="{Binding Path=Status, Converter={StaticResource ResourceKey=LoggerStatus2BrushConverter}}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="5,0,0,0"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
            <Button Content="打开目录" Click="ButtonOpenDirectory_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>
            <Button Content="打开日志" Click="ButtonOpenLogFile_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>
            <Button Content="开始记录" Click="ButtonStart_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>
            <Button Content="停止记录" Click="ButtonStop_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>
        </StackPanel>

    </Grid>

</mac:TabedSidePanel>
