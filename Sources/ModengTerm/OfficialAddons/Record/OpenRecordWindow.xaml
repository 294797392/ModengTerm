<mcsext:MdWindow x:Class="ModengTerm.OfficialAddons.Record.OpenRecordWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:ModengTerm.OfficialAddons.Record"
                 xmlns:muct="clr-namespace:ModengTerm.UserControls.TerminalUserControls"
                 xmlns:mcsext="clr-namespace:ModengTerm.Controls;assembly=ModengTerm.Controls"
                 mc:Ignorable="d"
                 Title="{DynamicResource ResourceKey=UIText5001}" 
                 Height="450" Width="700" WindowStartupLocation="CenterScreen" 
                 ResizeMode="CanResize" 
                 Closing="Window_Closing" Style="{StaticResource ResourceKey=StyleMdWindow}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="StyleTextBlockLocal" TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>

            <Style x:Key="StyleTextBoxLocal" TargetType="{x:Type TextBox}" BasedOn="{StaticResource ResourceKey=StyleTextBox}">
                <Setter Property="Margin" Value="3"/>
            </Style>

            <Style x:Key="StyleButtonLocal" TargetType="{x:Type Button}" BasedOn="{StaticResource ResourceKey=StyleButton}">
                <Setter Property="Margin" Value="3"/>
                <Setter Property="Height" Value="30"/>
            </Style>

            <Style x:Key="StyleComboBoxPlaybackList" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource ResourceKey=StyleComboBox}">
                <Setter Property="Height" Value="30"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="选择录像">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="70"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="回放列表：" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>

                <ComboBox Grid.Column="1" x:Name="ComboBoxPlaybackList" SelectedIndex="0" Style="{StaticResource ResourceKey=StyleComboBoxPlaybackList}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Grid.Column="2" x:Name="ButtonPlay" Content="播放" Click="ButtonPlay_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>

                <Button Grid.Column="3" x:Name="ButtonDelete" Content="删除" Click="ButtonDelete_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>

            </Grid>
        </GroupBox>

        <Grid Grid.Row="1">
            <GroupBox Header="播放器">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="GridTerminal" Background="Transparent" SizeChanged="GridTerminal_SizeChanged"
                          MouseMove="GridTerminal_MouseMove" MouseDown="GridTerminal_MouseDown" MouseUp="GridTerminal_MouseUp"
                          MouseWheel="GridTerminal_MouseWheel">

                        <Border x:Name="BorderBackground"/>

                        <muct:TerminalControl x:Name="DocumentAlternate"/>
                        <muct:TerminalControl x:Name="DocumentMain"/>
                    </Grid>

                </Grid>
            </GroupBox>
        </Grid>

    </Grid>
</mcsext:MdWindow>
