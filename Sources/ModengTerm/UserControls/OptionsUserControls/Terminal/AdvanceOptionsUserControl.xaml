<UserControl x:Class="ModengTerm.UserControls.OptionsUserControl.Terminal.AdvanceOptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModengTerm.UserControls.OptionsUserControl.Terminal"
             xmlns:xceedtoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:converter="clr-namespace:ModengTerm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModengTerm;component/Styles/OptionsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converter:RenderModeTextConverter x:Key="RenderModeTextConverter"/>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <GroupBox Header="显示" Width="200" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="显示方式：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBoxRenderModes" Style="{StaticResource ResourceKey=StyleComboBoxValue}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource ResourceKey=RenderModeTextConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="输入颜色：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                <xceedtoolkit:ColorPicker Grid.Row="1" Grid.Column="1" x:Name="ColorPickerSendColor" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="接收颜色：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                <xceedtoolkit:ColorPicker Grid.Row="2" Grid.Column="1" x:Name="ColorPickerRecvColor" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>

                <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="CheckBoxDisplaySend" HorizontalAlignment="Right" Margin="0,0,5,0" Content="显示输入的数据" Style="{StaticResource ResourceKey=StyleCheckBoxLocal}"/>

            </Grid>
        </GroupBox>

        <StackPanel Margin="210,10,0,0" Orientation="Vertical">
            <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="CheckBoxClickToCursor" VerticalAlignment="Center" Margin="0,0,0,0"
                  Content="自由移动光标" Style="{StaticResource ResourceKey=StyleCheckBoxLocal}"/>

            <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="CheckBoxAutoWrapMode" VerticalAlignment="Center" Margin="0,10,0,0"
                  Content="自动换行（DECAWM）" Style="{StaticResource ResourceKey=StyleCheckBoxLocal}"/>

        </StackPanel>
        
    </Grid>

</UserControl>
