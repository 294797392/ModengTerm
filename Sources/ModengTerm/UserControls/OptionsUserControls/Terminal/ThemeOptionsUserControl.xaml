<UserControl x:Class="ModengTerm.UserControls.OptionsUserControls.Terminal.ThemeOptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XTerminal.UserControls.OptionsUserControl"
             xmlns:converter="clr-namespace:ModengTerm"
             xmlns:enums="clr-namespace:ModengTerm.Terminal.Enumerations;assembly=ModengTerm.Terminal"
             xmlns:documentenums="clr-namespace:ModengTerm.Document.Enumerations;assembly=ModengTerm.Document"
             xmlns:wpftoolkitcontrols="clr-namespace:WPFToolkit.Controls;assembly=WPFToolkit"
             xmlns:termuc="clr-namespace:ModengTerm.UserControls.OptionsUserControl.Terminal"
             xmlns:xceedtoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControl1">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModengTerm;component/Styles/OptionsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converter:ColorDefinition2BrushConverter x:Key="ColorDefinition2BrushConverter"/>

            <Style x:Key="StyleGroupBoxLocal" TargetType="{x:Type GroupBox}">
                <Setter Property="Margin" Value="2"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="切换主题：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>

            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBoxThemeList" SelectionChanged="ComboBoxThemeList_SelectionChanged" Style="{StaticResource ResourceKey=StyleComboBoxValue}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

        </Grid>

        <GroupBox Grid.Row="1" Header="预览" Style="{StaticResource ResourceKey=StyleGroupBoxLocal}">
            <termuc:ThemePreviewUserControl Theme="{Binding ElementName=ComboBoxThemeList, Path=SelectedItem}"
                                            BackgroundColor="{Binding ElementName=ColorPickerBackground, Path=SelectedColor}"
                                            PreviewFontFamily="{Binding ElementName=ComboBoxFontFamily, Path=SelectedItem.Value}"
                                            PreviewFontSize="{Binding ElementName=ComboBoxFontSize, Path=SelectedItem.Value}"
                                            PreviewFontColor="{Binding ElementName=ColorPickerForeground, Path=SelectedColor}"
                                            PreviewBackgroundImage="{Binding Path=BackImageUri}"
                                            PreviewBackgroundImageOpacity="{Binding Path=BackImageOpacity}"/>
        </GroupBox>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Row="0" Grid.Column="0" Header="配置" Style="{StaticResource ResourceKey=StyleGroupBoxLocal}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="字体：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ComboBoxFontFamily" Style="{StaticResource ResourceKey=StyleComboBoxValue}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="大小：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <ComboBox Grid.Row="0" Grid.Column="3" x:Name="ComboBoxFontSize" Style="{StaticResource ResourceKey=StyleComboBoxValue}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="前景色：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <xceedtoolkit:ColorPicker Grid.Row="1" Grid.Column="1" x:Name="ColorPickerForeground" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="背景色：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <xceedtoolkit:ColorPicker Grid.Row="1" Grid.Column="3" x:Name="ColorPickerBackground" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="背景图：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="99" x:Name="TextBoxBackgroundImage" IsReadOnly="True" Margin="3,0,70,0" Height="25" Style="{StaticResource ResourceKey=StyleTextBoxValue}"/>
                    <Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="99" Content="浏览" Height="25" Width="60" HorizontalAlignment="Right" Click="ButtonBrowseBackgroundImage_Click" Style="{StaticResource ResourceKey=StyleButtonLocal}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="透明度：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <Slider Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="99" x:Name="SliderBackgroundOpacity" VerticalAlignment="Center" Minimum="0" Maximum="1" TickFrequency="0.1"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="光标色：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <xceedtoolkit:ColorPicker Grid.Row="4" Grid.Column="1" x:Name="ColorPickerCursorColor" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>

                    <TextBlock Grid.Row="4" Grid.Column="2" Text="高亮背景：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <xceedtoolkit:ColorPicker Grid.Row="4" Grid.Column="3" x:Name="ColorPickerSelectionBackColor" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="内边距：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <TextBox Grid.Row="5" Grid.Column="1" x:Name="TextBoxPadding" Style="{StaticResource ResourceKey=StyleTextBoxValue}"/>

                    <!--<TextBlock Grid.Row="4" Grid.Column="0" Text="滚动条：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                    <xceedtoolkit:ColorPicker Grid.Row="4" Grid.Column="1" x:Name="ColorPickerScrollbar" SelectedColor="{Binding Path=BackColor, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ResourceKey=StyleColorPickerOptions}"/>-->

                </Grid>
            </GroupBox>
            
        </Grid>

    </Grid>
</UserControl>
