<UserControl x:Class="ModengTerm.UserControls.OptionsUserControls.FileTrans.TransmissionOptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModengTerm.UserControls.OptionsUserControls.FileTrans"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModengTerm;component/Styles/OptionsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="缓冲区大小设置">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="上传：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TextBoxUploadBufferSize" Style="{StaticResource ResourceKey=StyleTextBoxValue}"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="kb" HorizontalAlignment="Left" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="下载：" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>
                <TextBox Grid.Row="0" Grid.Column="4" x:Name="TextBoxDownloadBufferSize" Style="{StaticResource ResourceKey=StyleTextBoxValue}"/>
                <TextBlock Grid.Row="0" Grid.Column="5" Text="kb" HorizontalAlignment="Left" Style="{StaticResource ResourceKey=StyleTextBlockKey}"/>

            </Grid>
        </GroupBox>
        
    </Grid>

</UserControl>
