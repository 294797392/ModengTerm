<UserControl x:Class="ModengTerm.UserControls.FileTransUserControls.WorkbenchUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModengTerm.UserControls.FileTransUserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <local:FileSystemTreeUserControl Grid.Column="0" DataContext="{Binding Path=ClientFsTree}" Margin="3"
                                             EnterDirectory="FileSystemTreeUserControl_EnterDirectory"
                                             TransferFile="FileSystemTreeUserControl_StartTransfer"/>

            <local:FileSystemTreeUserControl Grid.Column="1" DataContext="{Binding Path=ServerFsTree}" Margin="3"
                                             EnterDirectory="FileSystemTreeUserControl_EnterDirectory"
                                             TransferFile="FileSystemTreeUserControl_StartTransfer"/>

        </Grid>

    </Grid>
</UserControl>
