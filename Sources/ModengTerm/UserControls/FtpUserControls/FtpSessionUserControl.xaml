<UserControl x:Class="ModengTerm.UserControls.FtpUserControls.FtpSessionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModengTerm.UserControls.FtpUserControls"
             xmlns:toolkitcontrols="clr-namespace:WPFToolkit.Controls;assembly=WPFToolkit"
             xmlns:converters="clr-namespace:ModengTerm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>

            <converters:FsOperationTypeNameConverter x:Key="FsOperationTypeNameConverter"/>
            <converters:ProcessStatesNameConverter x:Key="ProcessStatesNameConverter"/>

            <Style x:Key="StyleTextBlockLocal" TargetType="{x:Type TextBlock}">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <HierarchicalDataTemplate x:Key="HierarchicalDataTemplateFileList" ItemsSource="{Binding Path=Children}">
                <TextBlock Text="{Binding Path=Name}"/>
            </HierarchicalDataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="200" MinHeight="150" MaxHeight="300"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.RowSpan="999" Grid.Column="0" Grid.ColumnSpan="999" Background="#F0F0F0"/>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <local:FileListUserControl Grid.Column="0" x:Name="FileListUserControlClient" DataContext="{Binding Path=ClientFsTree}" Margin="3,3,0,3"/>

            <GridSplitter Grid.Column="1" ShowsPreview="True" ResizeDirection="Columns" Background="Transparent"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <local:FileListUserControl Grid.Column="2" x:Name="FileListUserControlServer" DataContext="{Binding Path=ServerFsTree}" Margin="0,3,3,3"/>

        </Grid>

        <GridSplitter Grid.Row="1" ShowsPreview="True" ResizeDirection="Rows" Background="Transparent"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Grid Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="ColumnDefinitionSourceFilePath" Width="1*"/>
                    <ColumnDefinition x:Name="ColumnDefinitionTargetFilePath" Width="1*"/>
                    <ColumnDefinition x:Name="ColumnDefinition3" Width="100"/>
                    <ColumnDefinition x:Name="ColumnDefinition4" Width="60"/>
                    <ColumnDefinition x:Name="ColumnDefinition5" Width="100"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" x:Name="Border1"/>

            </Grid>

            <toolkitcontrols:TreeListView DataContext="{Binding Path=TaskTree}" ItemsSource="{Binding Path=Roots}" Style="{StaticResource ResourceKey=StyleTreeListView}">

                <toolkitcontrols:TreeListView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}" />
                </toolkitcontrols:TreeListView.ItemTemplate>

                <toolkitcontrols:TreeListView.Columns>

                    <GridViewColumnCollection>

                        <!-- 第一列必须设置成带有ToggleButton的模板，不然没法展开 -->
                        <GridViewColumn Header="源路径" Width="{Binding ElementName=Border1, Path=ActualWidth}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <ToggleButton x:Name="Expander" Style="{StaticResource ResourceKey=StyleTreeListViewToggleButton}" Margin="{Binding Level,Converter={StaticResource LevelIndentConverter},RelativeSource={RelativeSource AncestorType={x:Type toolkitcontrols:TreeListViewItem}}}" 
                                                      IsChecked="{Binding Path=IsExpanded,RelativeSource={RelativeSource AncestorType={x:Type toolkitcontrols:TreeListViewItem}}}" ClickMode="Press"/>

                                        <Image Margin="5,0,0,0" Source="{Binding Path=Icon}" VerticalAlignment="Center" Stretch="None"/>
                                        <TextBlock Margin="5,0,0,0" Text="{Binding Path=SourceFullPath}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                                    </DockPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Path=HasItems,RelativeSource={RelativeSource AncestorType={x:Type toolkitcontrols:TreeListViewItem}}}" Value="False">
                                            <Setter TargetName="Expander" Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="目标路径" Width="{Binding ElementName=Border1, Path=ActualWidth}">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=TargetFullPath}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <!--<GridViewColumn Header="操作" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=OpType, Converter={StaticResource ResourceKey=FsOperationTypeNameConverter}}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>-->

                        <GridViewColumn Header="传输速度" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Speed}" HorizontalAlignment="Center" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="进度" Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <!--<ProgressBar Minimum="0" Maximum="100" Height="20" Value="{Binding Path=Progress}"/>-->
                                        <TextBlock Text="{Binding Path=Progress, StringFormat='{}{0}%'}" HorizontalAlignment="Center" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="状态" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=State, Converter={StaticResource ResourceKey=ProcessStatesNameConverter}}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridViewColumnCollection>

                </toolkitcontrols:TreeListView.Columns>

            </toolkitcontrols:TreeListView>
        </Grid>

    </Grid>
</UserControl>
