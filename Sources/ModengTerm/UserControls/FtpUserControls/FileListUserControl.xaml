<UserControl x:Class="ModengTerm.UserControls.FtpUserControls.FileListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dd="clr-namespace:WPFToolkit.DragDrop;assembly=WPFToolkit"
             xmlns:toolkitconverters="clr-namespace:WPFToolkit.Converters;assembly=WPFToolkit"
             xmlns:converters="clr-namespace:ModengTerm"
             xmlns:vmftp="clr-namespace:ModengTerm.ViewModel.Ftp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControl1">

    <UserControl.Resources>
        <toolkitconverters:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter"/>
        <toolkitconverters:BooleanVisibilityConverter2 x:Key="BooleanVisibilityConverter2"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="3"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <!-- 目录导航 -->
        <Grid Grid.Row="0" DataContext="{Binding Path=Addressbar}">

            <Border Background="White" BorderBrush="#D9D9D9" BorderThickness="1"/>

            <ListBox x:Name="ListBoxDirectroyChain" ItemsSource="{Binding Path=DirectroyChain}" Margin="0,1,0,1">
                <ListBox.Style>
                    <Style TargetType="{x:Type ListBox}">
                        <Setter Property="BorderBrush" Value="{x:Null}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBox}">
                                    <Grid>
                                        <Border/>
                                        <ItemsPresenter/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Style>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="Margin" Value="0,0,0,0"/>
                        <Setter Property="Background" Value="{x:Null}"/>
                        <Setter Property="BorderBrush" Value="{x:Null}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                    <Grid>
                                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}"/>
                                        <ContentPresenter/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>

                        <DataTemplate.Resources>
                            <Style x:Key="StyleButton" TargetType="{x:Type Button}">
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Padding" Value="7,2,5,0"/>
                                    </Trigger>
                                </Style.Triggers>
                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,0,5,0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">

                                            <Grid>
                                                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                                        Background="{TemplateBinding Background}"/>

                                                <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                                                  Margin="{TemplateBinding Padding}"/>

                                            </Grid>

                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataTemplate.Resources>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" x:Name="ButtonDirectoryName" Content="{Binding Path=Name}" Click="ButtonJumpDirectory_Click" Style="{StaticResource ResourceKey=StyleButton}"/>
                            <Button Grid.Column="1" x:Name="ButtonPreviewSubDirectory" Content="&gt;" Click="ButtonShowPreviewDirectories_Click" Style="{StaticResource ResourceKey=StyleButton}"/>
                        </Grid>

                        <DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5F3FF" TargetName="ButtonDirectoryName"/>
                                <Setter Property="Background" Value="#E5F3FF" TargetName="ButtonPreviewSubDirectory"/>
                                <Setter Property="BorderBrush" Value="#CCE8FF" TargetName="ButtonDirectoryName"/>
                                <Setter Property="BorderBrush" Value="#CCE8FF" TargetName="ButtonPreviewSubDirectory"/>
                            </Trigger>
                        </DataTemplate.Triggers>

                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>

            <Popup x:Name="PopupPreviewDirectory" Placement="Bottom" StaysOpen="False">
                <ListBox x:Name="ListBoxPreviewDirectory" SelectionChanged="ListBoxPreviewDirectory_SelectionChanged">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Visibility" Value="{Binding Path=IsVisible, Converter={StaticResource ResourceKey=BooleanVisibilityConverter}}"/>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Path=Icon}"/>
                                <TextBlock Text="{Binding Path=Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Popup>
        </Grid>

        <!-- 文件列表 -->
        <ContentControl Grid.Row="2" x:Name="ContentControlFileList"/>

        <Grid Grid.Row="3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" Text="{Binding Path=TotalHiddens, StringFormat='一共有{0}个隐藏项目'}" Margin="0,0,10,0"/>
            <CheckBox Grid.Column="2" x:Name="CheckBoxToggleHiddenItem" Content="显示隐藏的项目" Checked="CheckBoxShowHiddenItems_CheckedChanged" Unchecked="CheckBoxShowHiddenItems_CheckedChanged"/>

        </Grid>
    </Grid>
</UserControl>
