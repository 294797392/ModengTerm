<UserControl x:Class="ModengTerm.UserControls.FileTransUserControls.FileSystemTreeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModengTerm.UserControls.FileTransUserControls"
             xmlns:dd="clr-namespace:WPFToolkit.DragDrop;assembly=WPFToolkit"
             xmlns:toolkitconverters="clr-namespace:WPFToolkit.Converters;assembly=WPFToolkit"
             xmlns:converters="clr-namespace:ModengTerm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="UserControl1">

    <UserControl.Resources>

        <converters:FileItemDisplaySizeConverter x:Key="FileItemDisplaySizeConverter"/>
        <converters:FsItemTypeNameConverter x:Key="FsItemTypeNameConverter"/>
        <converters:FsItemType2SizeVisibleConverter x:Key="FsItemType2SizeVisibleConverter"/>
        <converters:FsItemIsHidden2ForegroundConverter x:Key="FsItemIsHidden2ForegroundConverter"/>
        <toolkitconverters:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter"/>

        <Style x:Key="StyleTextBlockLocal" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGridFsList" ItemsSource="{Binding Path=Roots}" MouseDoubleClick="DataGridFsList_MouseDoubleClick" 
                  dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" 
                  dd:DragDrop.DropHandler="{Binding ElementName=UserControl1}"
                  Style="{StaticResource ResourceKey=StyleDataGrid}">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <ContextMenu.Resources>
                        <CollectionViewSource x:Key="CollectionViewSource1" Source="{Binding Path=ContextMenus}"/>
                    </ContextMenu.Resources>

                    <ContextMenu.ItemsSource>
                        <CompositeCollection>
                            <CollectionContainer Collection="{Binding Source={StaticResource CollectionViewSource1}}"/>
                        </CompositeCollection>
                    </ContextMenu.ItemsSource>
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}" BasedOn="{StaticResource ResourceKey=StyleDataGridRow}">
                    <Setter Property="Visibility" Value="{Binding Path=IsVisible, Converter={StaticResource ResourceKey=BooleanVisibilityConverter}}"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Foreground" Value="{Binding Path=IsHidden, Converter={StaticResource ResourceKey=FsItemIsHidden2ForegroundConverter}}"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource ResourceKey=StyleDataGridColumnHeader}">
                    <Setter Property="Height" Value="30"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="名字" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Path=Icon}" VerticalAlignment="Center" Stretch="None"/>
                                <TextBlock Text="{Binding Path=Name}" Margin="5,0,0,0"
                                           Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="类型" Width="70" CanUserSort="True" SortMemberPath="Type">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Type, Converter={StaticResource ResourceKey=FsItemTypeNameConverter}}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="大小" Width="80" CanUserSort="True" SortMemberPath="Size">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Size, Converter={StaticResource ResourceKey=FileItemDisplaySizeConverter}}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"
                                       Visibility="{Binding Path=Type, Converter={StaticResource ResourceKey=FsItemType2SizeVisibleConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="最后修改日期" Width="150" CanUserSort="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=LastUpdateTime, StringFormat='yyyy/MM/dd hh:mm:ss'}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
            
        </DataGrid>

        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="1" Text="{Binding Path=TotalHiddens, StringFormat='一共有{0}个隐藏项目'}" Margin="0,0,10,0"/>
            <CheckBox Grid.Column="2" x:Name="CheckBoxToggleHiddenItem" Content="显示隐藏的项目" Checked="CheckBoxShowHiddenItems_CheckedChanged" Unchecked="CheckBoxShowHiddenItems_CheckedChanged"/>

        </Grid>

        <!--<TreeView Style="{StaticResource ResourceKey=StyleTreeView}" ItemsSource="{Binding Path=Roots}">

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                    <TextBlock Text="{Binding Path=Name}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>

        </TreeView>-->
    </Grid>
</UserControl>
