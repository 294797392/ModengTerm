<mcsext:MdWindow x:Class="ModengTerm.Windows.Ftp.TaskProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModengTerm.Windows.Ftp"
        xmlns:mcsext="clr-namespace:ModengTerm.Controls;assembly=ModengTerm.Controls"
        mc:Ignorable="d"
        Title="TaskProgressWindow" Height="80" Width="400"
                 WindowStartupLocation="CenterScreen"
                 Style="{StaticResource ResourceKey=StyleMdWindow}">

    <Window.Resources>
        <Style x:Key="StyleTextBlockLocal" TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="20,0,0,0" Orientation="Horizontal">
            <TextBlock Text="当前文件：" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
            <TextBlock Text="{Binding Path=FilePath}" Style="{StaticResource ResourceKey=StyleTextBlockLocal}"/>
        </StackPanel>

        <ProgressBar Grid.Row="1" Height="20" Margin="10,5,10,5" IsIndeterminate="True"/>

    </Grid>
</mcsext:MdWindow>
