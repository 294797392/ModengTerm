<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:XTerminal.Client.TerminalConsole"
    xmlns:texts="clr-namespace:XTerminal.Client.TerminalConsole.Rendering"
    xmlns:carets="clr-namespace:XTerminal.Client.TerminalConsole.Carets">

    <Style x:Key="StyleTextList" TargetType="{x:Type texts:TextList}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:ShellControl}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ShellControl}">
                    <Grid x:Name="PART_Grid" FocusVisualStyle="{x:Null}">
                        <ScrollViewer Name="PART_ScrollViewer" FocusVisualStyle="{x:Null}"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto">
                            <texts:TextList x:Name="PART_TextList" Style="{StaticResource ResourceKey=StyleTextList}"/>
                        </ScrollViewer>
                        <carets:CaretPanel x:Name="PART_CaretPanel"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>