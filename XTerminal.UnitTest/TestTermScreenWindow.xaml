<Window x:Class="XTerminal.UnitTest.TestTermScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:XTerminal.Controls;assembly=XTerminal"
        Title="TestTermLineWindow" Height="600" Width="800">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/XTerminal;Component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <control:TermDisplayer Style="{StaticResource ResourceKey=StyleTermScreen}"/>
    </Grid>
</Window>